record(bi, "TEST:BINARY") {
  field(VAL, "0")
  field(ZNAM, "OFF")
  field(ONAM, "ON")
}

record(calc, "TEST:CALC") {
  field(CALC, "(a)? 0:1")
  field(INPA, "TEST:CALC")
  field(SCAN, ".1 second")
  field(VAL, "0")
}

record(calc, "TEST:BLINK") {
  field(CALC, "(a)? 0:1")
  field(INPA, "TEST:BLINK")
  field(SCAN, "1 second")
  field(VAL, "1")
}


record(ai, "TEST:AI") {
  field(VAL, "62.50")
  field(PINI, "YES")
  field(EGU, "unit")
}

record(calc, "TEST:PROGRESS") {
  field(CALC, "a=100?0:a+1")
  field(INPA, "TEST:PROGRESS")
  field(SCAN, ".1 second")
  field(VAL, "0")
}

